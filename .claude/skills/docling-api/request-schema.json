{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Docling Convert File Request",
  "description": "Request parameters for POST /v1/convert/file (multipart/form-data)",
  "type": "object",
  "required": ["files"],
  "properties": {
    "files": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "binary"
      },
      "description": "File(s) to convert"
    },
    "to_formats": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["md", "json", "html", "html_split_page", "text", "doctags"]
      },
      "default": ["md"],
      "description": "Output format(s) to convert to"
    },
    "from_formats": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["docx", "pptx", "html", "image", "pdf", "asciidoc", "md", "csv", "xlsx", "xml_uspto", "xml_jats", "mets_gbs", "json_docling", "audio", "vtt"]
      },
      "default": ["docx", "pptx", "html", "image", "pdf", "asciidoc", "md", "csv", "xlsx", "xml_uspto", "xml_jats", "mets_gbs", "json_docling", "audio", "vtt"],
      "description": "Input format(s) to accept"
    },
    "do_ocr": {
      "type": "boolean",
      "default": true,
      "description": "Enable OCR for bitmap content"
    },
    "force_ocr": {
      "type": "boolean",
      "default": false,
      "description": "Replace existing text with OCR-generated text"
    },
    "ocr_engine": {
      "type": "string",
      "enum": ["auto", "easyocr", "ocrmac", "rapidocr", "tesserocr", "tesseract"],
      "default": "easyocr",
      "description": "OCR engine to use"
    },
    "ocr_lang": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Languages for OCR engine (e.g., ['en', 'fr', 'de'])"
    },
    "do_table_structure": {
      "type": "boolean",
      "default": true,
      "description": "Extract table structure"
    },
    "table_mode": {
      "type": "string",
      "enum": ["fast", "accurate"],
      "default": "accurate",
      "description": "Table structure extraction mode"
    },
    "table_cell_matching": {
      "type": "boolean",
      "default": true,
      "description": "Match table cell predictions back to PDF cells"
    },
    "pipeline": {
      "type": "string",
      "enum": ["standard", "vlm"],
      "default": "standard",
      "description": "Processing pipeline for PDF/image files"
    },
    "pdf_backend": {
      "type": "string",
      "enum": ["pypdfium2", "dlparse_v1", "dlparse_v2", "dlparse_v4"],
      "default": "dlparse_v4",
      "description": "PDF parsing backend"
    },
    "page_range": {
      "type": "array",
      "items": {"type": "integer"},
      "minItems": 2,
      "maxItems": 2,
      "default": [1, 9223372036854775807],
      "description": "Page range to convert [start, end], 1-indexed"
    },
    "include_images": {
      "type": "boolean",
      "default": true,
      "description": "Extract images from document"
    },
    "images_scale": {
      "type": "number",
      "default": 2.0,
      "description": "Scale factor for extracted images"
    },
    "image_export_mode": {
      "type": "string",
      "enum": ["placeholder", "embedded", "referenced"],
      "default": "embedded",
      "description": "How to include images in output"
    },
    "md_page_break_placeholder": {
      "type": "string",
      "default": "",
      "description": "Placeholder string for page breaks in markdown (e.g., '<!-- page-break -->')"
    },
    "do_code_enrichment": {
      "type": "boolean",
      "default": false,
      "description": "Perform OCR code enrichment"
    },
    "do_formula_enrichment": {
      "type": "boolean",
      "default": false,
      "description": "Perform formula OCR, return LaTeX code"
    },
    "do_picture_classification": {
      "type": "boolean",
      "default": false,
      "description": "Classify pictures in documents"
    },
    "do_picture_description": {
      "type": "boolean",
      "default": false,
      "description": "Generate descriptions for pictures"
    },
    "document_timeout": {
      "type": "number",
      "default": 604800.0,
      "description": "Timeout for processing each document (seconds)"
    },
    "abort_on_error": {
      "type": "boolean",
      "default": false,
      "description": "Abort on error"
    }
  }
}
