{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Docling Convert Document Response",
  "description": "Response from POST /v1/convert/file",
  "type": "object",
  "required": ["document", "status", "processing_time"],
  "properties": {
    "document": {
      "$ref": "#/definitions/ExportDocumentResponse"
    },
    "status": {
      "type": "string",
      "enum": ["success", "failure", "pending"],
      "description": "Conversion status"
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "error_type": {"type": "string"},
          "message": {"type": "string"}
        }
      },
      "default": []
    },
    "processing_time": {
      "type": "number",
      "description": "Processing time in seconds"
    },
    "timings": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "start": {"type": "number"},
          "end": {"type": "number"},
          "duration": {"type": "number"}
        }
      }
    }
  },
  "definitions": {
    "ExportDocumentResponse": {
      "type": "object",
      "required": ["filename"],
      "properties": {
        "filename": {"type": "string"},
        "md_content": {"type": ["string", "null"]},
        "json_content": {"$ref": "#/definitions/DoclingDocument"},
        "html_content": {"type": ["string", "null"]},
        "text_content": {"type": ["string", "null"]},
        "doctags_content": {"type": ["string", "null"]}
      }
    },
    "DoclingDocument": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "schema_name": {
          "type": "string",
          "const": "DoclingDocument"
        },
        "version": {
          "type": "string",
          "description": "Schema version (e.g., '1.8.0')"
        },
        "name": {"type": "string"},
        "origin": {"$ref": "#/definitions/DocumentOrigin"},
        "body": {"$ref": "#/definitions/GroupItem"},
        "furniture": {"$ref": "#/definitions/GroupItem"},
        "groups": {
          "type": "array",
          "items": {"$ref": "#/definitions/GroupItem"}
        },
        "texts": {
          "type": "array",
          "items": {"$ref": "#/definitions/TextElement"}
        },
        "tables": {
          "type": "array",
          "items": {"$ref": "#/definitions/TableItem"}
        },
        "pictures": {
          "type": "array",
          "items": {"$ref": "#/definitions/PictureItem"}
        },
        "key_value_items": {"type": "array"},
        "form_items": {"type": "array"},
        "pages": {
          "type": "object",
          "additionalProperties": {"$ref": "#/definitions/PageItem"}
        }
      }
    },
    "DocumentOrigin": {
      "type": "object",
      "properties": {
        "mimetype": {"type": "string"},
        "binary_hash": {"type": "integer"},
        "filename": {"type": "string"},
        "uri": {"type": ["string", "null"]}
      }
    },
    "GroupItem": {
      "type": "object",
      "properties": {
        "self_ref": {"type": "string"},
        "parent": {"$ref": "#/definitions/RefItem"},
        "children": {
          "type": "array",
          "items": {"$ref": "#/definitions/RefItem"}
        },
        "content_layer": {
          "type": "string",
          "enum": ["body", "furniture"]
        },
        "name": {"type": "string"},
        "label": {"type": "string"}
      }
    },
    "RefItem": {
      "type": "object",
      "properties": {
        "$ref": {
          "type": "string",
          "description": "JSON pointer reference (e.g., '#/texts/0')"
        }
      }
    },
    "TextElement": {
      "type": "object",
      "required": ["self_ref", "label", "text", "orig"],
      "properties": {
        "self_ref": {"type": "string"},
        "parent": {"$ref": "#/definitions/RefItem"},
        "children": {
          "type": "array",
          "items": {"$ref": "#/definitions/RefItem"}
        },
        "content_layer": {
          "type": "string",
          "enum": ["body", "furniture"]
        },
        "label": {
          "type": "string",
          "enum": ["title", "section_header", "text", "paragraph", "caption", "footnote", "list_item", "page_header", "page_footer", "reference", "checkbox_selected", "checkbox_unselected", "empty_value"],
          "description": "Element type label"
        },
        "text": {
          "type": "string",
          "description": "Processed text content"
        },
        "orig": {
          "type": "string",
          "description": "Original text from source"
        },
        "prov": {
          "type": "array",
          "items": {"$ref": "#/definitions/ProvenanceItem"}
        },
        "level": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "description": "Heading level (for section_header only)"
        },
        "enumerated": {
          "type": "boolean",
          "description": "Whether list item is numbered (for list_item only)"
        },
        "marker": {
          "type": "string",
          "description": "List item marker (for list_item only)"
        },
        "formatting": {
          "type": ["object", "null"],
          "properties": {
            "bold": {"type": "boolean"},
            "italic": {"type": "boolean"},
            "underline": {"type": "boolean"}
          }
        },
        "hyperlink": {"type": ["string", "null"]}
      }
    },
    "TableItem": {
      "type": "object",
      "required": ["self_ref", "data"],
      "properties": {
        "self_ref": {"type": "string"},
        "parent": {"$ref": "#/definitions/RefItem"},
        "children": {
          "type": "array",
          "items": {"$ref": "#/definitions/RefItem"}
        },
        "content_layer": {"type": "string"},
        "label": {
          "type": "string",
          "enum": ["table", "document_index"]
        },
        "prov": {
          "type": "array",
          "items": {"$ref": "#/definitions/ProvenanceItem"}
        },
        "captions": {
          "type": "array",
          "items": {"$ref": "#/definitions/RefItem"}
        },
        "footnotes": {
          "type": "array",
          "items": {"$ref": "#/definitions/RefItem"}
        },
        "references": {
          "type": "array",
          "items": {"$ref": "#/definitions/RefItem"}
        },
        "image": {"$ref": "#/definitions/ImageRef"},
        "data": {"$ref": "#/definitions/TableData"}
      }
    },
    "TableData": {
      "type": "object",
      "required": ["grid"],
      "properties": {
        "num_rows": {"type": "integer"},
        "num_cols": {"type": "integer"},
        "table_cells": {
          "type": "array",
          "items": {"$ref": "#/definitions/TableCell"}
        },
        "grid": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {"$ref": "#/definitions/TableCell"}
          },
          "description": "2D grid of cells [row][col]"
        }
      }
    },
    "TableCell": {
      "type": "object",
      "required": ["start_row_offset_idx", "end_row_offset_idx", "start_col_offset_idx", "end_col_offset_idx", "text"],
      "properties": {
        "text": {"type": "string"},
        "bbox": {"$ref": "#/definitions/BoundingBox"},
        "row_span": {"type": "integer", "default": 1},
        "col_span": {"type": "integer", "default": 1},
        "start_row_offset_idx": {"type": "integer"},
        "end_row_offset_idx": {"type": "integer"},
        "start_col_offset_idx": {"type": "integer"},
        "end_col_offset_idx": {"type": "integer"},
        "column_header": {"type": "boolean", "default": false},
        "row_header": {"type": "boolean", "default": false},
        "row_section": {"type": "boolean", "default": false},
        "fillable": {"type": "boolean", "default": false}
      }
    },
    "PictureItem": {
      "type": "object",
      "required": ["self_ref"],
      "properties": {
        "self_ref": {"type": "string"},
        "parent": {"$ref": "#/definitions/RefItem"},
        "children": {
          "type": "array",
          "items": {"$ref": "#/definitions/RefItem"}
        },
        "content_layer": {"type": "string"},
        "label": {
          "type": "string",
          "enum": ["picture", "chart"]
        },
        "prov": {
          "type": "array",
          "items": {"$ref": "#/definitions/ProvenanceItem"}
        },
        "captions": {
          "type": "array",
          "items": {"$ref": "#/definitions/RefItem"}
        },
        "footnotes": {
          "type": "array",
          "items": {"$ref": "#/definitions/RefItem"}
        },
        "image": {"$ref": "#/definitions/ImageRef"}
      }
    },
    "ProvenanceItem": {
      "type": "object",
      "required": ["page_no", "bbox", "charspan"],
      "properties": {
        "page_no": {
          "type": "integer",
          "description": "1-indexed page number"
        },
        "bbox": {"$ref": "#/definitions/BoundingBox"},
        "charspan": {
          "type": "array",
          "items": {"type": "integer"},
          "minItems": 2,
          "maxItems": 2,
          "description": "Character span [start, end] in text"
        }
      }
    },
    "BoundingBox": {
      "type": "object",
      "required": ["l", "t", "r", "b"],
      "properties": {
        "l": {
          "type": "number",
          "description": "Left coordinate"
        },
        "t": {
          "type": "number",
          "description": "Top coordinate"
        },
        "r": {
          "type": "number",
          "description": "Right coordinate"
        },
        "b": {
          "type": "number",
          "description": "Bottom coordinate"
        },
        "coord_origin": {
          "type": "string",
          "enum": ["TOPLEFT", "BOTTOMLEFT"],
          "default": "TOPLEFT",
          "description": "Coordinate system origin"
        }
      }
    },
    "ImageRef": {
      "type": ["object", "null"],
      "properties": {
        "mimetype": {"type": "string"},
        "dpi": {"type": "integer"},
        "size": {
          "type": "object",
          "properties": {
            "width": {"type": "number"},
            "height": {"type": "number"}
          }
        },
        "uri": {
          "type": "string",
          "description": "Data URI or external reference"
        }
      }
    },
    "PageItem": {
      "type": "object",
      "properties": {
        "size": {
          "type": "object",
          "properties": {
            "width": {"type": "number"},
            "height": {"type": "number"}
          }
        },
        "image": {"$ref": "#/definitions/ImageRef"}
      }
    }
  }
}
